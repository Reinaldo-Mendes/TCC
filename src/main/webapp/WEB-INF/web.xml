<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>cadastrar</servlet-name>
        <servlet-class>Controllers.encomenda.CadastrarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cadastrar</servlet-name>
        <url-pattern>/cadastroEncomenda</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrarEncomenda</servlet-name>
        <servlet-class>Controllers.encomenda.CadastrarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrarEncomenda</servlet-name>
        <url-pattern>/pages/registrarEncomenda</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>registrarApartamento</servlet-name>
        <servlet-class>Controllers.apartamento.CadastrarApartamentoController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>registrarApartamento</servlet-name>
        <url-pattern>/pages/registrarApartamento</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrarMorador</servlet-name>
        <servlet-class>Controllers.morador.CadastrarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrarMorador</servlet-name>
        <url-pattern>/pages/registrarMorador</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuscarEncomendaPorParametro</servlet-name>
        <servlet-class>Controllers.encomenda.BuscarPorParametroController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BuscarEncomendaPorParametro</servlet-name>
        <url-pattern>/buscarEncomendaPorParametro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListarEncomenda</servlet-name>
        <servlet-class>Controllers.encomenda.ListarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListarEncomenda</servlet-name>
        <url-pattern>/ListarEncomenda</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModificarApartamento</servlet-name>
        <servlet-class>Controllers.apartamento.ModificarApartamentoController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModificarApartamento</servlet-name>
        <url-pattern>/ModificarApartamento</url-pattern>
        <url-pattern>/pages/ModificarApartamento</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModificarMorador</servlet-name>
        <servlet-class>Controllers.morador.ModificarMoradorController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModificarMorador</servlet-name>
        <url-pattern>/ModificarMorador</url-pattern>
        <url-pattern>/pages/ModificarMorador</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModificarEncomenda</servlet-name>
        <servlet-class>Controllers.encomenda.ModificarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModificarEncomenda</servlet-name>
        <url-pattern>/ModificarEncomenda</url-pattern>
        <url-pattern>/pages/ModificarEncomenda</url-pattern>

    </servlet-mapping>

    <servlet>
        <servlet-name>ExcluirEncomenda</servlet-name>
        <servlet-class>Controllers.encomenda.ExcluirController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExcluirEncomenda</servlet-name>
        <url-pattern>/ExcluirEncomenda</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValidarLogin</servlet-name>
        <servlet-class>Controllers.login.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ValidarLogin</servlet-name>
        <url-pattern>/pages/ValidarLogin</url-pattern>
    </servlet-mapping>



</web-app>